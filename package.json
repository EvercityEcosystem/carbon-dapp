{
  "name": "evercity-tokenizer",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.jsx --fix",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx,css,scss}' --write",
    "postinstall": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{html,css,less,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@polkadot/api": "^8.9.1",
    "@polkadot/extension-dapp": "^0.44.1",
    "@polkadot/ui-keyring": "^2.9.3",
    "@polkadot/util": "^9.5.1",
    "@polkadot/util-crypto": "^9.5.1",
    "antd": "^4.21.3",
    "classnames": "^2.3.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "6",
    "unchanged": "^2.2.1",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^1.3.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.1",
    "husky": "^8.0.0",
    "less": "^4.1.3",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "vite": "^2.9.9"
  }
}
